<Window x:Class="PlanningM.Measurement.View.ViewChangeDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanningM.Measurement.View"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="ViewChangeDate" Height="179.165" Width="197.059" ResizeMode="NoResize" Background="AliceBlue">

    <Border BorderThickness="5">
        <Grid>
            <Calendar Name="Clndr" SelectedDate="{Binding SelectedDate}"
                      SelectedDatesChanged="Clndr_SelectedDatesChanged"/>
        </Grid>
    </Border>
</Window>
